@page
@model RazorPizzaria.Pages.PizzaModel
@{
}
<div class="text-center background">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our great selection of Pizzas!
        </h1>
        <h4>Choose one,or try our Pizza Builder! then order and Done!</h4>
        <h4>No need to get any of your details!</h4>
        <h4>We already know everthing!</h4>
        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img width="100%" height="250" src=~/images/vecteezy_fresh-pizza-and-pizza-box-clipart-design-illustration_9384620_800.png />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own Pizza with our PizzaMaker!</p>
                            <a class=" btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza">Try Now !</a>
                        </div>

                    </div>

                </div>
            </div>
            @foreach (var pizza in @Model.Pizzaha)
            {
                var path = "~/images/" + (pizza.ImageTitle+".png");
                <div class="col-4 mb-5 back">
                    <img src="@path" class="w-100 mb-3" asp-append-version="true" />
                    <a class="btn alert-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice" asp-route-PizzaName="@pizza.PizzaName">Get this Pizza!</a>
                    <br />
                </div>
            }

        </div>
    </div>
</div>